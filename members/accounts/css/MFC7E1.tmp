@import url(http://fonts.googleapis.com/css?family=Open+Sans);
div#content {
	font-family: 'Open Sans', sans-serif;
	overflow: hidden;
	position: relative;
}
div#yourFaceTop {
	height: 160px;
	width: 870px;
	border-bottom: 1px solid #000;	
}
div#membersImage {
	width: 187px;
	height: 155px;
	background-image:url(../faceBackground.png);
	float: left;
	display: inline;	
}
div#membersImage img {
	margin: 0 auto;
}
div#description {
	float: left;
	display: inline;
	padding-left: 15px;
}
div#description h1 {
	font-size: 60px;
		font-weight:400;
}
div#description p {
	font-size: 18px;
}
div#bottomContent {
	height: 100%;
	min-height: 300px;	
}
div#side-bar {
	float: left;
	width: 157px;
	height: 100%;
	min-height: 300px;
	text-align: center;
	background-color: #e9e9e9;
	display: inline;
}
.side-nav {
	min-height: 100%;
	padding-top: 0px;
}
.side-nav li{
	margin: 0; 
	padding: 0;
}
.menuOption {
	width: 157px;
	height: 40px;
	line-height: 40px;
}
.menuOption:hover {
	background-color: #999999;
}
.active {
	background-color: #CCC;
	color: #FFF;
}
div#side-bar ul li a {
	color: #000;
	text-decoration: none;
}
div#bottomMainContent {
	font-size: 14px;
	display: inline;
	padding-left: 10px;
	width: 703px;
	float: left;
	text-align: left;
	padding-top: 10px;
}
.everyone {
	width: 703px;
}
.individual_person {
	height: 60px;
	width: 150px;
	display: inline;
	float: left;
	padding-right: 15px;
	border: 1px solid #000000;
	padding-bottom: 10px;
}
textarea {
	width: 690px;
	height: 50px;
	resize: none;
}
.button {
	float: right;
}
#submitEvent {
	width: 690px;
	height: 100px;
	border-bottom: 1px solid #000;
}
div#userEvents {
	padding-top: 5px;
	height: 50px;
	width: 690px;
	border-bottom: 1px dotted #000;
}
div#userEvents p {
	text-align: left;
	font-size: 20px;
}
div#userEvents h3 {
	text-align: right;
	font-size: 14px;
}
